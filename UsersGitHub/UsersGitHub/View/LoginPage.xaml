<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsersGitHub.View.LoginPage"
             BackgroundColor="DarkBlue">
    <ContentPage.Content>
        <StackLayout>
            <Entry WidthRequest="250" HorizontalOptions="Center" BackgroundColor="LightGray"  x:Name="LoginEntry"  Margin="0,100,0,0" Placeholder="Login"></Entry>
            <Button WidthRequest="100" HorizontalOptions="Center" VerticalOptions="Center" BackgroundColor="LightGray" x:Name="LoginButton" Margin="0,200,0,0" Text="Log in"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>